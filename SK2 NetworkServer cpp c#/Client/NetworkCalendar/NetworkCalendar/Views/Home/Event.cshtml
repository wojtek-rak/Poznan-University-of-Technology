@model NetworkCalendar.Models.EventDetailed

@{
    ViewData["Title"] = "Event";
}

<h2>Event</h2>

<h4>EventDetailed</h4>
<hr />
<h6>@ViewBag.DeleteMessage</h6>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" data-val="true" disabled="@ViewBag.Disabled" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Owner" class="control-label"></label>
                <input asp-for="Owner" data-val="true" disabled="@ViewBag.Disabled" class="form-control" />
                <span asp-validation-for="Owner" class="text-danger"></span>
            </div>

            @if (ViewBag.Delete == true)
            {
                <div class="form-group">
                    <label asp-for="Date.Date" class="control-label"></label>
                    <input asp-for="Date.Date" data-val="true" disabled="@ViewBag.Disabled" class="form-control" />
                    <span asp-validation-for="Date.Date" class="text-danger"></span>
                </div>
            }
            else
            {
                <div class="form-group">
                    <label asp-for="Date"  class="control-label"></label>
                    <input asp-for="Date" data-val="true" disabled="@ViewBag.Disabled" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
            }
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" data-val="true" disabled="@ViewBag.Disabled" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            @if (ViewBag.Display == false)
            {
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            }
            @if (ViewBag.Delete == true)
            {
                <input type="button"
                       value="Delete"
                       onclick="@("location.href='" + Url.Action("Delete", "Home", new { id = ViewBag.Id }) + "'")" />
            }

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

